{
  "compilerOptions": {
    "outDir": "bin",
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es2020"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "ts-node": {
    "esm": true
  }
}
